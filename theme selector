    <script>
        const params = new URLSearchParams(window.location.search);
        const filter = params.get("filter") || "vl";

        function customRedirect(themeId) {
            if (filter == "cc" && themeId == 'family') {
                window.location.href = "/cc_selector"; 
            } else {
                redirect(themeId);
            }
        }

        function redirect(tId, ccId = false) {
            if (filter == "cc") {
                // If it's a CC request and we have a specific CC ID, use it
                window.location.href = `/cc_browser?themeId=${ccId || tId}`;
                return;
            }
            window.location.href = `./go_full?tray=${tId}`;
        }
    </script>
